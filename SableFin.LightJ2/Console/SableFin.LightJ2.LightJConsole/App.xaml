<Application
    x:Class="SableFin.LightJ2.LightJConsole.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SableFin.LightJ2.LightJConsole"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Themes/Default/WinRt81LegacyBrushes.xaml"/>
                <ResourceDictionary Source="Assets/Common/StandardStyles.xaml"/>
                <ResourceDictionary Source="Themes/Default/LightJCustomStyles.xaml"/>
                <ResourceDictionary Source="LaserPatternResource.xaml"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>

</Application>
